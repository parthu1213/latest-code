          .filter-widget.mb-0
            %h2.fw-title refine by
            .price-range-wrap
              %h4 Price
              .price-range.ui-slider.ui-corner-all.ui-slider-horizontal.ui-widget.ui-widget-content{"data-max" => "270", "data-min" => "10"}
                .ui-slider-range.ui-corner-all.ui-widget-header{:style => "left: 0%; width: 100%;"}
                %span.ui-slider-handle.ui-corner-all.ui-state-default{:style => "left: 0%;", :tabindex => "0"}
                %span.ui-slider-handle.ui-corner-all.ui-state-default{:style => "left: 100%;", :tabindex => "0"}
              .range-slider
                .price-input
                  %input#minamount{:type => "text"}>/
                  \/
                  = succeed "/" do
                    %input#maxamount{:type => "text"}/
          .filter-widget.mb-0
            %h2.fw-title color by
            .fw-color-choose
              .cs-item
                %input#gray-color{:name => "cs", :type => "radio"}>/
                \/
                %label.cs-gray{:for => "gray-color"}
                  %span (3)
              .cs-item
                %input#orange-color{:name => "cs", :type => "radio"}>/
                \/
                %label.cs-orange{:for => "orange-color"}
                  %span (25)
