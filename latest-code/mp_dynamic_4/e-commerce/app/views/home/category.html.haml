              .cs-item
                %input#blue-color{:checked => "checked", :name => "cs", :type => "radio"}>/
                \/
                %label.cs-blue{:for => "blue-color"}
                  %span (29)
          .filter-widget.mb-0
            %h2.fw-title Size
            .fw-size-choose
              .sc-item
                %input#xs-size{:name => "sc", :type => "radio"}>/
                \/
                %label{:for => "xs-size"} XS
              .sc-item
                %input#s-size{:name => "sc", :type => "radio"}>/
                \/
                %label{:for => "s-size"} S
              .sc-item
                %input#m-size{:checked => "checked", :name => "sc", :type => "radio"}>/
                \/
                %label{:for => "m-size"} M
              .sc-item
                %input#l-size{:name => "sc", :type => "radio"}>/
                \/
                %label{:for => "l-size"} L
              .sc-item
                %input#xl-size{:name => "sc", :type => "radio"}>/
                \/
                %label{:for => "xl-size"} XL
              .sc-item
                %input#xxl-size{:name => "sc", :type => "radio"}>/
                \/
                %label{:for => "xxl-size"} XXL
