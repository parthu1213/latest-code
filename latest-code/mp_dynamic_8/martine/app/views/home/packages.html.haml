              nav: false
            },
            768: {
              items: 2,
              nav: false

            },
            991: {
              items: 3,
              nav: true
            }
          }
        });
      }
      var event = $('.event_slider');
      if (event.length) {
        event.owlCarousel({
          items: 1,
          loop: true,
          dots: false,
          autoplay: true,
          margin: 40,
          autoplayHoverPause: true,
          autoplayTimeout: 5000,
          nav: true,
